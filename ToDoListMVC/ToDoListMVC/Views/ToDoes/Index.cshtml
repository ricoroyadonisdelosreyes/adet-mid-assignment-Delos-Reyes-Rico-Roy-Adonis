@model IEnumerable<ToDoListMVC.Models.ToDo>

@{
    ViewData["Title"] = "Index";
}

<h1>To Do Task</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Done)
            </th>
            <th width="500">
                @Html.DisplayNameFor(model => model.TodoTask)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td width="500">
                @Html.DisplayFor(modelItem => item.TodoTask)
            </td>


            <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td> 
            <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
        </tr>
}
    </tbody>
</table>
